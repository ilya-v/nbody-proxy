#!/bin/bash

#paperspace machines list | grep -E '\"id\"|\"name\"|\"state\"'

OUT=/tmp/status.$$
cd "$(dirname "$0")"
export PAPERSPACE_API_KEY=$(./apikey)

printf "content-type: text/html\r\n\r\n" > $OUT

echo "<pre>" >> $OUT
echo "$(date)" >> $OUT
paperspace machines list | jq '.[0] | .id, .name, .state' >> $OUT
echo "</pre>" >> $OUT

cat $OUT
rm $OUT
